    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Leezenflow Terminal",
            "type": "python",
            "request": "launch",
            "program": "scripts/main.py",
            "args": [
                "--display=terminal",
                "--signal_group=14",
                "--lsa-id=4070"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Traffic Light Simulation",
            "type": "python",
            "request": "launch",
            "program": "scripts/traffic_light_tcp_simulation.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}